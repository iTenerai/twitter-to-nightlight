{
    "manifest_version": 2,
    "name": "Twitter to Nightlight",
    "version": "1.0",
    "description": "Adds a button to Twitter which lets you repost tweets directly to Nightlight with proper attribution.",
    "permissions": [
        "cookies",
        "activeTab",
        "tabs",
        "notifications",
        "https://twitter.com/*",
        "https://x.com/*",
        "https://night-light.cz/*"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "https://twitter.com/*",
                "https://x.com/*",
                "https://night-light.cz/*"
            ],
            "js": [
                "content-script.js"
            ],
            "css": [
                "styles.css"
            ]
        }
    ],
    "web_accessible_resources": [
        "assets/logo_monochrome.png"
    ],
    "content_security_policy": "script-src 'self' https://night-light.cz; object-src 'self'"
}
